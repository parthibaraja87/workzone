                                            </VBox>
										</form:SimpleForm> -->
                                        <form:SimpleForm editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" singleContainerFullSize="false" labelSpanXL="4"
											labelSpanL="3" labelSpanM="4" labelSpanS="12" emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1"
											columnsM="1">
											<VBox width="100%">
                                          		 <Label text="{i18n>visitdate}"  required="true" class="wizardlabel sapUiSmallMarginEnd"/>
                                                 <DatePicker width="40%" id="idVisitDate" valueFormat="yyyy-MM-dd" placeholder="Enter Start Date ..." required="true" change="DateSelect"/>
                                          			<Label text="{i18n>providertype}" class="wizardlabel sapUiSmallMarginEnd sapUiSmallMarginTop"/>
													<Select width="40%" forceSelection="false" id="idProviderType" selectedKey="" change="ResourceSelect" items="{/avResourceNames}" showSecondaryValues="true">
							
														<core:ListItem key="{uid}" text="{resName}" additionalText="{uid} {ResourceLevel}"/>
													</Select>
													<Label text="{i18n>clinicname}" class="wizardlabel sapUiSmallMarginEnd sapUiSmallMarginTop"/>
													<Input width="40%" type="Text" value="" placeholder="Enter only text value" id="idClinicName" required="true"/>
													<Label text="{i18n>invoice}" class="wizardlabel sapUiSmallMarginEnd sapUiSmallMarginTop"/>
													<Input width="40%" type="Text" value="" placeholder="Enter only numeric value" id="idInvoice" required="true"/>
													<Label text="{i18n>claimamount}" class="wizardlabel sapUiSmallMarginEnd sapUiSmallMarginTop"/>
													<Input width="40%" type="Number" placeholder="Enter the amount" id="idClaimAmount" required="true"/>
													<Label text="{i18n>diagnosis}" class="wizardlabel sapUiSmallMarginEnd sapUiSmallMarginTop"/>
													<TextArea width="40%" placeholder="Enter the diagnosis (Max 5)" id="idDiagnosis" required="true"/>
													<Label text="{i18n>attachment}" class="wizardlabel sapUiSmallMarginEnd sapUiSmallMarginTop"/>
													<u:FileUploader width="40%" id="idAttachment" name="myFileUpload"/>
													<Label text="{i18n>remarks}" class="wizardlabel sapUiSmallMarginEnd sapUiSmallMarginTop"/>
													<TextArea width="40%" placeholder="Enter the Remarks" id="idRemarks" required="false"/>
													
											
												
                                            </VBox>
										</form:SimpleForm>

									</l:content>
								</l:Grid>
							</WizardStep>
						</Wizard>

                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
