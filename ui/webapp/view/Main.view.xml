												</HBox>
												<HBox width="auto" class="sapUiTinyMarginTopBottom">
													<Label text="{i18n>attachment}" class="wizardlabel sapUiSmallMarginEnd sapUiSmallMarginTop"/>
													<u:FileUploader id="idAttachment" name="myFileUpload"/>
												</HBox>
												<HBox width="auto" class="sapUiTinyMarginTopBottom">
													<Label text="{i18n>remarks}" class="wizardlabel sapUiSmallMarginEnd sapUiSmallMarginTop"/>
													<TextArea  placeholder="Enter the Remarks" id="idRemarks" required="false"/>
